{
  "name": "react-starter-typescript",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "serve": "npm run build && serve --single --listen 3000 build",
    "generate": "node ./.hygen/scripts.js",
    "test": "is-ci test:ci test:dev",
    "test:ci": "cross-env CI=true craco test",
    "test:dev": "craco test",
    "test:e2e": "is-ci test:e2e:ci test:e2e:dev",
    "test:e2e:ci": "start-server-and-test serve http://localhost:3000 'cypress run'",
    "test:e2e:dev": "start-server-and-test start http://localhost:3000 'cypress open'",
    "validate": "cross-env CI=true npm run test && cross-env CI=true npm run test:e2e",
    "cypress": "cypress open"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.0",
    "styled-components": "^5.3.0",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.11",
    "babel-plugin-styled-components": "^1.12.0",
    "craco-alias": "^2.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^7.3.0",
    "enquirer": "^2.3.6",
    "hygen": "^6.1.0",
    "is-ci-cli": "^2.2.0",
    "prerender-spa-plugin": "^3.4.0",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.12.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
